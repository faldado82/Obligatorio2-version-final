<!-- Para habilitar session se necesita implementar lo siguiente -->
@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obligatorio 2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 text-center">

                        @if (Context.Session.GetString("logueadoNombreUsuario") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Registro">Registro</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Actividad" asp-action="Index">Actividades</a>
                            </li>
                        }
                        else
                        {
                            if (Context.Session.GetString("logueadoRol") == "Cliente")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Compra" asp-action="Index">Compras</a>
                                </li>
                            }

                            if (Context.Session.GetString("logueadoRol") == "Operador")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="OpBusqueda">Buscar compras</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="ListaClientes">Listar clientes</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="OpListarActividadesPorFechaYCategoria">Actividades: fecha/categoria</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="OpListarActividadesPorLugar">Actividades: lugar</a>
                                </li>
                                <li class="nav-item"> 
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="OpListarComprasMayorValor">Mayor/es compras</a>
                                </li>

                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Actividad" asp-action="Index">Actividades</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Logout">Cerrar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <section class="container">
            <div class="row">

                <div class="col-12 text-center">
                    &copy; Nov. 2021 - Obligatorio 2da parte - Grupo M2B - Prof. Joaquín Rodríguez
                </div>

                <div class="col-12 text-center">
                    Rafael Diaz - 141395 // Esteban Martinez - 271209 // Francisco Aldado - 279264
                </div>
            </div>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
